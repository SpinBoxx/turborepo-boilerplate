    "db:generate": "turbo -F @zanadeal/db db:generate",
    "db:migrate": "turbo -F @zanadeal/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0",
    "typescript": "^5",
    "@types/node": "^22.13.11"
  },
  "packageManager": "npm@11.0.0"
