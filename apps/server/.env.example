############################
# Core
############################

# development | production
NODE_ENV=development

HOST=0.0.0.0
PORT=8080

############################
# CORS
############################

# Comma-separated allowlist. Example: http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGIN=http://localhost:3000

############################
# Fastify / Security / Limits
############################

# Trust X-Forwarded-* headers (true/false). In prod it's enabled automatically.
TRUST_PROXY=false

# Request body size limit in bytes
BODY_LIMIT_BYTES=1048576

# Max URL param length
MAX_PARAM_LENGTH=200

############################
# Under-pressure (resource protection)
############################

MAX_EVENT_LOOP_DELAY_MS=500
MAX_HEAP_USED_BYTES=536870912
MAX_RSS_BYTES=1073741824
RETRY_AFTER_SECONDS=30

############################
# Global rate limit
############################

RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW=1 minute

############################
# Auth rate limit (/api/auth/*)
############################

AUTH_RATE_LIMIT_MAX=20
AUTH_RATE_LIMIT_WINDOW=1 minute

############################
# API reference exposure
############################

# In production, the API reference UI is disabled unless this is true.
EXPOSE_API_REFERENCE=false

############################
# Database
############################

DATABASE_URL=

############################
# better-auth
############################

BETTER_AUTH_SECRET=

# Public base URL of the server (used by better-auth)
BETTER_AUTH_URL=http://localhost:8080

# RESEND MAILER 
RESEND_API_KEY

# Cloudinary
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_CLOUD_NAME=